@inject IJSRuntime JS

<head>
    <link href="/css/FrontPage/FrontPage_Earn.css" rel="stylesheet" /> 
</head>

<div class="Earn">
    <div class="FrontPage-Title" id="FrontPage-Title-01">
        <img src="/images/FrontPage/FrontPage-Title-01.webp" alt="">
    </div>

    @* <div class="Earn-Title">
        <div>
            <!-- Play to Earn! -->
        </div>
    </div> *@
    <div class="flagZone">
         <div class="flag-768-down">     
           <div class="flagReel-Container">          
                <div class="flagReel-Paper">
                    <div class="flagPaper-BG">
                        <h3>
                            ERNC
                        </h3>
                        <div class="flagPaper-BG-Line">
                            <img  src="/images/FrontPage/About/LineBar.png"/>
