<div class="Schedule">
    <h2 id="Schedule" >- Schedule -</h2>
    <div class="Schedule-BG">
        <div class="Schedule-Month">
            <img class="ScheduleMonth-prev"src="/images/AsiaChampionsLeague/S3/Calender/Calender_ Month button icon.png">
            <p> July </p>
            <img class="ScheduleMonth-next" src="/images/AsiaChampionsLeague/S3/Calender/Calender_ Month button icon.png">

        </div>
        <div class="Schedule-Week">
            <p>MON</p>
            <p>TUES</p>
            <p>WED</p>
            <p>THURS</p>
            <p>FRI</p>
            <p>SAT</p>
            <p>SUN</p>
        </div>
        <div class="Schedule-Carousel">        
            <div class="owl-carousel owl-theme ACLS3ScheduleCarousel">
         
                @foreach (var  item in daySquare)
                {
                    <div class="item">     
                        @for(int i = 1  ; i < item[0,0] ;i++)
                        {                            
                            @if(item[2,0]<=i && item[2,0]+item[1,0] > i ){
                                <div class="DaySquare DaySquareColor"></div>
                            }
                            else{
                                <div class="DaySquare"></div>                             
                            }
                        }
                    </div>
                }
            
               
            </div>
        </div>
    </div>
</div>


@code {
  @*  public int daySquare = 42;*@
    public int[][,] daySquare = new int[5][,]
    {
          @* 總格子數，總天數，第幾天開始，比賽日期*@
    new int[,] { { 42 },{30 },{3},{3} },
     new int[,] { { 42 },{31} ,{5},{3}    },
     new int[,] { { 42 },{31} ,{1},{3} },
     new int[,] { { 42 },{30 },{4 },{3}  },
     new int[,] { { 42 },{ 31 },{ 6 },{3} },
    };
}
