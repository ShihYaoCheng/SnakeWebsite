@page "/GettingStarted/{router?}"
@using SnakeAsianLeague.Pages.Teach.Components
@using SnakeAsianLeague.Data.Entity.View

<head>
    <link href="/css/Teach/Teach.css" rel="stylesheet" />
</head>


 <div class='teach-container' >
    
    <CascadingValue Value="@SetpTextData">
        <TeachNavBar Value=@SquareData /> 
    </CascadingValue>

   <div class="main-container">
        @switch (router)
        {
            case "create-metamask":
                <CascadingValue Value="@title1">
                    <CreateMetamask />
                </CascadingValue>
                break;
            case "connect-opensea":
                <CascadingValue Value="@title2">
                    <ConnectOpensea />
                </CascadingValue>
         
                break;
            case "create-PonPonSnake-game":
                <CascadingValue Value="@title3">
                        <CreatePonPonSnakeGame />
                </CascadingValue>
           
                break;      
            case "connect-game-account":
                <CascadingValue Value="@title4">
                        <ConnectGameAccount />
                </CascadingValue>
           
                break;      
            case "download-and-play":
                <CascadingValue Value="@title5">
                        <DownloadAndPLAY />
                </CascadingValue>        
                break;    
        }
    </div>

    <TeachDot Value=@SquareData  />
 </div>
@code {
    [Parameter]
    public string? router { get; set; }

    protected override void OnInitialized()
    {
        router = router ?? "index";
    }

