@page "/ACLIndexS2"
@inject IJSRuntime JS

@* 亞洲聯賽第二季 *@

<head>
    <link href="css/ACLIndexS2.css" rel="stylesheet" />
    <title>PonPonSnake 碰碰蛇｜Asian Champions League S2 亞洲聯賽第二季</title>
</head>


<div class="ACLIndexS2Block">
    <div class="BannerBlock">
        <div class="BannerBlockMain">
            <div class="BannerImg">
                <img src="/images/AsiaChampionsLeague/S2/ACL_S2_BG.jpeg" alt="">
            </div>

            <div class="BannerBlockTitle">
                <p data-aos="zoom-in-down" data-aos-duration="800">ASIA CHAMPIONS LEAGUE </p>
                <p data-aos="flip-left" data-aos-duration="1000" data-aos-delay="500">2022</p>
                <div class="BannerBlockNavLogo" data-aos="fade-down" data-aos-duration="800" data-aos-delay="800">
                    <img src="/images/AsiaChampionsLeague/S2/ACL_S2_LOGO.png" alt="">
                </div>
            </div>


            <div class="BannerBlockNav">
                
                @* 亞洲聯賽 賽季選單 *@
                <div class="NavBlockSelect">
                    <select name="" id="ACLSeasonNav">
                        <option style="display: none;" disable>ACL Season</option>
                        <optgroup label="- 2022 -">
                            <option value="ACLIndexS2">ACL S2</option>
                        </optgroup>
                        <optgroup label="- 2021 -">
                            <option value="ACLIndex">ACL S1</option>
                        </optgroup>
                    </select>
                </div> 
                

                <div class="BannerBlockNavList">
                    <div class="NavListAnchor">
                        <a href="ACLIndexS2#ComingSoon">About</a>
                        <div class="shine"></div>
                    </div>
                    <div class="NavListAnchor">
                        <a href="ACLIndexS2#ComingSoon">Schedule</a>
                        <div class="shine"></div>
                    </div>
                    <div class="NavListAnchor">
                        <a href="ACLIndexS2#ComingSoon">Ranking</a>
                        <div class="shine"></div>
                    </div>
                    <div class="NavListAnchor">
                        <a href="ACLIndexS2#ComingSoon">Reward</a>
                        <div class="shine"></div>
                    </div>
                    <div class="NavListAnchor">
                        <a href="ACLIndexS2#ComingSoon">Notice</a>
                        <div class="shine"></div>
                    </div>
                </div>
            </div>

            @* <div class="BannerBlockSelect">
                <select name="" id="ACLSeason">
                <option style="display: none;" disable>ACL Season</option>
                <optgroup label="ACL-S1">
                <option value="ACLIndex">Index</option>
                <option value="description">Event info</option>
                <option value="rank">Ranking</option>
                <option value="prize">Rewords Claim</option>
                <option value="partner">Gifts Giveaway</option>
                <option value="notice">Notice</option>
                </optgroup>
                </select>
                </div> *@
        </div>




    </div>

    <div class="EventInfo">
        <div class="S2Title">Event Info</div>
        <div class="ComingSoon" id="ComingSoon">
            <img src="/images/AsiaChampionsLeague/S2/info_Vague.png" alt="">
        </div>
    </div>

</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("Animate");
            await JS.InvokeVoidAsync("selectChangeLocation");
            await JS.InvokeVoidAsync("installI18n");
        }
    }

}