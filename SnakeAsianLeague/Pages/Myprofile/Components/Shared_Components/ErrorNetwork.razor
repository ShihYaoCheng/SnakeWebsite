@inject IJSRuntime JS

<head>
    <link href="css/MyProfile/shared/ErrorNetwork.css" rel="stylesheet" />     
  
</head>


<div class="errorContainer">
    <div class="errorNav"> 
        <p data-i18n="Inventory_data:SWAP.WrongNetwork">Wrong Network</p>
        <button  @onclick="AddPolygonClick"><span data-i18n="Inventory_data:SWAP.SwitchYoMetWorkName">Switch to</span> @Value </button>
    </div>
</div>
@code {
    [Parameter]
    public EventCallback<int> AddPolygon { get; set;}

    [Parameter]
    public string Value { get; set; }


      private void AddPolygonClick()
    {
        AddPolygon.InvokeAsync();   
    }

    

}
