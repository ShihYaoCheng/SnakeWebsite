<div class="CheckoutPop-container" >
    <div class="CheckoutPop">
        <svg  @onclick="clickCloseCheckoutPop" class="products-popup-close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" width="25">
            <path id="" data-name="" d="M10,10,0,20,10,10,0,0,10,10,20,0,10,10,20,20Z" transform="translate(2.5 2.5)"
                fill="none" stroke="#67ada2" stroke-linecap="round" stroke-linejoin="round" stroke-width="5" />
        </svg>

        <div class="CheckoutPop-content">
            @ChildContent           
        </div>
        <button  class="CheckoutPop-btn" @onclick="clickCloseCheckoutPop" type="submit"  data-i18n="Inventory_data:SWAP.Confirm">Confirm </button>
    </div>
</div>
@code {
    [Parameter]
    public RenderFragment? ChildContent   { get; set; }

    [Parameter]
    public EventCallback<bool> closeCheckoutPop { get; set;}

        private void clickCloseCheckoutPop()
    {
        closeCheckoutPop.InvokeAsync(false);   
    }

}
