
@using SnakeAsianLeague.Pages.Teach.Components.All_components
@using SnakeAsianLeague.Data.Services
@using SnakeAsianLeague.Data.Services.Backstage
@inject OfficialWebsiteData OfficialWebsiteData
@inject AppState AppState
<head>
    <link href="/css/Teach/DownloadAndPLAY.css" rel="stylesheet" />
</head>

<Main_Title  />
<div class="DownloadAndPLAY-container">
    <div class="img-Zone">
        <img class="Logo-ponponsnake" width="140" src="/images/Teach/PonPon LOGO.png" />
        <img class="shine-BG" src="/images/Teach/PAGE5_GLOW.png" />
    </div>
    <div class="Download-block-title" data-i18n="Started_data:gettingStarted.page5.title">
        PonPonSnake GO! @DownloadHitsText
    </div>
    
    <a @onclick="DownloadHits" class="yellow-button" href="https://play.google.com/store/apps/details?id=com.cqigames.snakeknight" target="_blank">
        <button>                      
            <img class="Download-button-icon" src="/images/Teach/icon/button-googlePlay.png"/>
            <div class="Download-icon-text" data-i18n="Started_data:gettingStarted.page5.btn1">Android</div>
                
            
        </button>
    </a>

    <a @onclick="DownloadHits" class="yellow-button"  href="https://apps.apple.com/us/app/%E7%A2%B0%E7%A2%B0%E8%9B%87-2/id1504212624" target="_blank">
        <button>
            <img class="Download-button-icon" src="/images/Teach/icon/button-ios.png"/>
            <div class="Download-icon-text" data-i18n="Started_data:gettingStarted.page5.btn2">IOS</div>
                
            
        </button>
    </a>

    <a @onclick="DownloadHits" class="yellow-button"  href="https://ponponsnake.oss-cn-hangzhou.aliyuncs.com/PonPonSnake.apk">
        <button>
            <img class="Download-button-icon" src="/images/Teach/icon/button-APK.png"/>
            <div class="Download-icon-text" data-i18n="Started_data:gettingStarted.page5.btn3">>APK File</div>
        </button>
    </a>
</div>

@code {
    uint userID = 0;  
    string DownloadHitsText="還沒變";
    public async Task DownloadHits()
    {
        userID=AppState.LoginStatus.userID;
        DownloadHitsText = await OfficialWebsiteData.DownloadHits(userID);
    }
}
