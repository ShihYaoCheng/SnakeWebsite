            <div class="V7-rule">
               <div class="V7-rule-diamond">
                    <img  src="/images/Battle/1V7/diamond.png"/>
               </div>              
               <div class="V7-rule-content">
                    <div class="V7-rule-content-title">
                        <img class="V7RuleContentText"  data-i18n="[src]Battle_data:V7.V7RuleContentText"  src="/images/Battle/1V7/V7RuleContentText.png"/>
