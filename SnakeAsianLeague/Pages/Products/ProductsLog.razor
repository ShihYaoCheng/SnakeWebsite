
@using SnakeAsianLeague.Data.Entity
@using SnakeAsianLeague.Data.Services.Products
@inject ProductsService ProductsService;

 <section class="products-section" id="products-Attributes">
        <div class="products-block">
            <div class="products-block-title" >Log</div>
            <div class="products-block-02" id="">
               <div class="products-Log-ButtonToggle-Zone">
                   <button>承租人</button>
                   <button>出戰時間</button>
                   <button>幣種</button>
                   <button>金幣</button>
                   <button>領取紀錄</button>
               </div>

               <div class="products-Log-Text-Zone">

                @if (DataList != null)
                {
                    @foreach (RecordsLog item in DataList.records)
                    {
                        <p>@item.tenantName  @item.dateFormat  @item.currencyTypeName  @item.rent  @item.receivedDateFormat </p>
                    }
                }

                   
               </div>
            </div>
        </div>
    </section>
@code {
    [Parameter]
    public string TokenID { get; set; }

    public UnitRecordLog DataList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }

    private async Task Refresh()
    {       
        DataList = await ProductsService.GetNFTUnitRecord(TokenID);
        StateHasChanged();
    }


    
}
